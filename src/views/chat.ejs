<%- include('partials/header') -%>

  <h1 class="text-4xl mb-4">Welcome <%= user.nickname %></h1>

  <form id="frmChat">
    <input type="hidden" name="txtUsername" value="<%= user.nickname %>" />
    <p class="py-3">
        <div class="w-1/2">
            <label for="txtMessage" class="text-lg font-medium text-gray-900 dark:text-white">Message</label>

            <input type="text" id="txtMessage" class="border px-5 pt-2 pb-2 w-1/2" placeholder="message" required>

            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 pt-2 pb-2 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Send</button>
        </div> 
    </p>
  </form>

  <p id="message-panel">
  
  </p>
<script src='/socket.io/socket.io.js'></script>
<script src='/js/chat.js'></script>

<%- include('partials/footer') -%>
